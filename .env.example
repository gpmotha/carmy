# Carmy Configuration
# Copy this file to .env and adjust values as needed

# Database URL (SQLite by default)
DATABASE_URL=sqlite:///carmy.db

# UI Language: en (English) or hu (Hungarian)
LANGUAGE=en

# Planning rules
SOUPS_PER_WEEK=2
MAIN_COURSES_PER_WEEK=4
MAX_MEAT_DISHES_PER_WEEK=3

# Don't repeat meals from the last N weeks
AVOID_RECENT_WEEKS=2

# Image storage directory
IMAGES_DIR=data/images/meals
